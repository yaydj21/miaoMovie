/* pages/movieDetail/movieDetail.wxss */
.box{
    height: 100vh;
}

.moveInfo_top {
    position: relative;
    height: 366rpx;
    box-sizing: border-box;
    padding: 30rpx;
    filter: blur(0);
    overflow: hidden;
}

.moveInfo_background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    filter: blur(30rpx);
    z-index: -1;
}

.moveInfo_mask {
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #40454e;
    opacity: 0.55;
}

.moveInfo_content {
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    color: #fff;
}

.moveInfo_poster {
    width: 214rpx;
    height: 300rpx;
    background-size: cover;
    background-repeat: no-repeat;
    border: solid 1px #f0f2f3;
}
.moveInfo_right{
    margin-left: 30rpx;
    font-size: 30rpx;
    padding-bottom: 40rpx;
}
.moveInfo_nm{
    font-size: 40rpx;
    font-weight: 700;
}
.moveInfo_enm{
    font-size: 25rpx;
    font-weight: 200;
}
.moveInfo_star{
    margin-top: 5rpx;
    color: #faaf00;
}
.moveInfo_star image{
    width: 30rpx;
    height: 30rpx;
}
.moveInfo_snum,.moveInfo_cat,.moveInfo_src,.moveInfo_pubDesc{
    font-size: 25rpx;
    color: rgba(255, 255, 255, 0.8);
}
.moveInfo_shareInfo{
    padding: 20rpx;
    background-color: #fff;
}
.shareInfo_title{
    margin-bottom: 16rpx;
    font-size: 36rpx;
}
.shareInfo_content{
    color: rgb(107, 107, 107);
    font-size: 30rpx;
}
.media{
    padding: 20rpx 20rpx;
    background-color: #fff;
    margin-top: 20rpx;
}
.media_items{
    display: flex;
}
.media_title{
    margin-bottom: 20rpx;
}
.media_img{
    width: 260rpx;
    height: 200rpx;
    margin-right: 20rpx;
}
.buy{
    width: 100vw;
    position: fixed;
    display: flex;
    justify-content: center;
    bottom: 0;
    left: 0;
    padding: 20rpx;
    background-color: red;
    color: #fff;
    font-size: 34rpx;
}
