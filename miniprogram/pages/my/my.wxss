/* pages/my/my.wxss */
.user{

}
.user_top{
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 500rpx;
    background-image: linear-gradient(340deg,rgb(245, 131, 131),red);
}
.user_img{
    width: 200rpx;
    height: 200rpx;
    border: 2rpx solid #fff;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 20rpx;
}
.user_img image{
    width: 100%;
    height: 100%;
    
}
.username{
    color: #fff;
}
.menus{
    padding-left: 20rpx;
    background-color: #fff;
}
.menu{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    border-bottom: 2rpx solid rgb(221, 220, 220, .5);
    font-size: 32rpx;
    line-height: 32rpx;
}
.menus .menu_btn{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    border-bottom: 2rpx solid rgb(221, 220, 220, .5);
    font-size: 32rpx;
    line-height: 32rpx;
    padding: 0;
    font-weight: 400;
}
.menu_left{
    display: flex;
    align-items: center;
}
.icon>image{
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
}
.arrow{
    margin-right: 30rpx;
}
.arrow image{
    width: 20rpx;
    height: 20rpx;
    line-height: 22rpx;
}