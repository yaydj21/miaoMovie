.img{
    height: 375rpx;
    margin: 20rpx;
    box-shadow: 2px 2px 2px 1px #ddd;
    background-color: #eee;
    line-height: 0;
    border-radius: 10rpx;
    box-sizing: border-box;
    overflow: hidden;

}
.img image{
    width: 100%;
    height: 100%;
}
.my_info{
    margin: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
    box-sizing: border-box;
    box-shadow: 2px 2px 2px 1px #ddd;
    padding: 20rpx;
    font-size: 30rpx;
    color: rgb(131, 130, 130);
}
.my_info view{
    padding: 5rpx 0;
}